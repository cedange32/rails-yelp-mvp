<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1><%= @restaurant.name %></h1>
      <h4><%= @restaurant.category %></h4>
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.phone_number %></p>
      <h3>Reviews</h2>
        <ul style="list-style-type: none;">
          <% @restaurant.reviews.each do |review| %>
          <li>
            <p>
              <%= review.content  %>
            </p>
            <p>
              Rating <strong> <%= "*" * review.rating %></strong> <%= "*" * (5 - review.rating) %>
            </p>
          </li>
          <% end %>
        </ul>


      <p> <%= link_to "Back to restaurants list", restaurants_path %> </p>

      <div class="container">
        <div class="row">
          <div class="col-md-6 offset-md-3">
            <h5>Create new review for <%= @restaurant.name %></h5>
            <%= simple_form_for [@restaurant, @review] do |f| %>
              <%= f.input :content %>
              <%= f.input :rating %>
              <%= f.button :submit, class: "btn btn-success"%>
            <% end %>



          </div>
        </div>
      </div>


    </div>
  </div>
</div>
