<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>Create new restaurant</h1>
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category %>
        <%= f.input :phone_number %>
        <%= f.button :submit %>
      <% end %>
      <%= link_to "Back to restaurants list", restaurants_path %>

    </div>
  </div>
</div>
