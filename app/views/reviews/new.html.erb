<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>Create new review for <%= @restaurant.name %></h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.button :submit, class: "btn btn-white"%>
      <% end %>
      <%= link_to "Back to restaurant", restaurant_path(@restaurant) %>

    </div>
  </div>
</div>
